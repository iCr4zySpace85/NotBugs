@{
    ViewData["Title"] = "SportSyncSoftware Organizador";
}

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />

    <title>SportSyncSoftware Organizador Torneos</title>

    <link href="~/css/app.css" rel="stylesheet" />
    <link href="~/css/sidebar.css" rel="stylesheet" />
    <link href="~/css/styles.css" rel="stylesheet" />
    
    @* <link href="~/css/SideNavbar.css" rel="stylesheet" /> *@
    <link rel="stylesheet" href="~/css/Pn_Con.css">

    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      integrity="sha512-..."
    />
  </head>

  <body>
    <div class="wrapper">
      <nav id="sidebar" class="sidebar js-sidebar">
        <div class="sidebar-content js-simplebar">
          <div class="text-center bg-blue sidebar-brand">
            <div class="text-center">
              <div class="text-center">
                <img
                  src="~/img/logo-sportsync.png"
                  class="img-fluid"
                  width="180"
                />
              </div>
            </div>
          </div>

          <ul class="sidebar-nav">
            <li class="sidebar-header">Paginas</li>

            <li class="sidebar-item active">
              <a class="sidebar-link" asp-controller="Contador" asp-action="panelContador">
                <ion-icon name="calendar-outline" style="width: 24px; height: 24px;"></ion-icon>
                <span class="align-middle">Inicio</span>
              </a>
            </li>

            <li class="sidebar-item">
              <a class="sidebar-link" asp-controller="Contador" asp-action="inscripciones">
                <ion-icon name="people-outline" style="width: 24px; height: 24px;"></ion-icon>
                <span class="align-middle">Inscripciones</span>
              </a>
            </li>
            
            <li class="sidebar-item">
              <a class="sidebar-link" asp-controller="Contador" asp-action="arbitraje">
                 <ion-icon name="clipboard-outline" style="width: 24px; height: 24px;"></ion-icon>
                <span class="align-middle">Arbitrajes</span>
              </a>
            </li>
            
            <li class="sidebar-item">
              <a class="sidebar-link" asp-controller="Contador" asp-action="patrocinadores">
                 <ion-icon name="card-outline" style="width: 24px; height: 24px;"></ion-icon>
                <span class="align-middle">Patrocinadores</span>
              </a>
            </li>
            
            <li class="sidebar-item">
              <a class="sidebar-link" asp-controller="Contador" asp-action="gastos">
                <ion-icon name="cash-outline" style="width: 24px; height: 24px;"></ion-icon>
                <span class="align-middle">Gastos</span>
              </a>
            </li>
            
          </ul>
        </div>
      </nav>

      <div class="main">
        <nav class="navbar navbar-expand navbar-bg">
          <a class="sidebar-toggle js-sidebar-toggle">
            <i class="hamburger align-self-center"></i>
          </a>

          <div class="navbar-collapse collapse">
            <ul class="navbar-nav navbar-align">
              <li class="nav-item dropdown">
                <a
                  class="nav-icon dropdown-toggle d-inline-block d-sm-none"
                  href="#"
                  data-bs-toggle="dropdown"
                >
                  <img
                    src="~/img/user-perfil.png"
                    class="avatar img-fluid rounded me-1"
                    alt="Charles Hall"
                  />
                </a>

                <a
                  class="nav-link dropdown-toggle d-none d-sm-inline-block"
                  href="#"
                  data-bs-toggle="dropdown"
                >
                  <img
                    src="~/img/user-perfil.png"
                    class="avatar img-fluid rounded me-1"
                    alt="Charles Hall"
                  />
                 @if (User.Identity.IsAuthenticated != null)
                  {
                    <span class="text-dark">@User.Identity.Name</span>
                  }
                </a>
                <div class="dropdown-menu dropdown-menu-end">
                  <div class="dropdown-divider"></div>

                  <a asp-action="CerrarSesion" asp-controller="Home" class="dropdown-item text-danger">
                    <i  class="align-middle me-1" data-feather="log-out"></i
                    >Cerrar sesión</a>
                </div>
              </li>
            </ul>
          </div>
        </nav>

        <main class="content">
          <div class="container-fluid p-0">
          
            <div class="card-body">
                <div class="cardÑ">
                    <div class="image-container">
                      <img src="https://via.placeholder.com/400x200" alt="Torneo">
                    </div>
                    <div class="info-container">
                      <h1>Nombre del Torneo</h1>
                      <p>Categoría o tipo de torneo: <span id="categoria">Categoria</span></p>
                      <p>Equipos participantes: <span id="equipos">Equipos</span></p>
                      <p>Estado actual del torneo: <span id="estado">Estado</span></p>
                      <p>Descripción del deporte: <span id="descripcion">Descripción</span></p>
                      <p>Fase del torneo: <span id="fase">Fase</span></p>
                      <p>Partidos pendientes: <span id="fase">3</span></p>
                    </div>
                  </div>
            </div>
            
            <br>
            <div class="title-container">
                <h2>Retiros y gastos</h2>
              </div>
            <div class="cardÑ"> 
                <div class="expense-container">
                  <h3>Nuevo gasto</h3>
                  <div class="new-expense">
                    <label for="descripcion">Descripción:</label>
                    <textarea id="descripcion" rows="4" placeholder="Ingrese una descripción"></textarea>
                    <label for="cantidad">Cantidad:</label>
                    <input type="number" id="cantidad" placeholder="Ingrese la cantidad"><br>
                    <br>
                    <button class="registrar-gastos">Registrar gastos</button>
                  </div><br>
                  <div class="expense-list">
                    <h3>Lista de gastos</h3>
                    <div class="gastos">
                      <div class="gasto">
                        <p>Descripción: Comida</p>
                        <p>Cantidad: $20</p>
                        <p>Fecha: 2024-04-21</p>
                      </div>
                      <hr>
                      <div class="gasto">
                        <p>Descripción: Comida</p>
                        <p>Cantidad: $20</p>
                        <p>Fecha: 2024-04-21</p>
                      </div>
                      <hr>
                      <div class="gasto">
                        <p>Descripción: Comida</p>
                        <p>Cantidad: $20</p>
                        <p>Fecha: 2024-04-21</p>
                      </div>
                      <hr>
                      <div class="gasto">
                        <p>Descripción: Comida</p>
                        <p>Cantidad: $20</p>
                        <p>Fecha: 2024-04-21</p>
                      </div>
                      <hr>
                      <!-- Aquí se añadirán más elementos de gasto dinámicamente -->
                    </div>
                  </div>
                </div>
              </div>
              <br>
              
              <div class="title-container">
                <h2>Ingresos del Torneo</h2>
              </div>
              <div class="cardÑ"> 
                <div class="income-container">
                  <div class="income-item">
                    <label for="inscripciones">Pagos de inscripciones:</label>
                    <input type="number" id="inscripciones" placeholder="Ingrese el monto">
                  </div>
                  <div class="income-item">
                    <label for="arbitraje">Pagos de arbitraje:</label>
                    <input type="number" id="arbitraje" placeholder="Ingrese el monto">
                  </div>
                  <div class="income-item">
                    <label for="patrocinadores">Patrocinadores:</label>
                    <input type="number" id="patrocinadores" placeholder="Ingrese el monto">
                  </div>
                  <div class="income-item">
                    <label for="gastos">Gastos:</label>
                    <input type="number" id="gastos" placeholder="Ingrese el monto">
                  </div>
                  <div class="total-income">
                    <p>Registro total de ingresos:</p>
                    <span id="total">0</span>
                  </div>
                </div>
              </div>
              <br><br>
          </div>
        </div>
        
          </div>
        </main>
        
      </div>
    </div>

    <script src="~/js/app.js"></script>
    <script src="~/js/mostrarJ.js"></script>
    <script src="~/js/tablas.js"></script>
    <script src="~/js/Pn_C.js"></script>

    <!-- ====== ionicons ======= -->
    <script
      type="module"
      src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"
    ></script>
    <script
      nomodule
      src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"
    ></script>
    
  </body>
</html>

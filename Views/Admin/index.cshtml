@{
    ViewData["Title"] = "SportSyncSoftware Organizador";
}

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />

    <title>SportSyncSoftware Organizador Torneos</title>

    <link href="~/css/app.css" rel="stylesheet" />
    <link href="~/css/sidebar.css" rel="stylesheet" />
    <link href="~/css/styles.css" rel="stylesheet" />
    
    @* <link href="~/css/SideNavbar.css" rel="stylesheet" /> *@
    <link rel="stylesheet" href="~/css/ConteL.css" />
    <link rel="stylesheet" href="~/css/roles.css">
    <link rel="stylesheet" href="~/css/permisos.css">

    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      integrity="sha512-..."
    />
  </head>

  <body>
    <div class="wrapper">
      <nav id="sidebar" class="sidebar js-sidebar">
        <div class="sidebar-content js-simplebar">
          <div class="text-center bg-blue sidebar-brand">
            <div class="text-center">
              <div class="text-center">
                <img
                  src="~/img/logo-sportsync.png"
                  class="img-fluid"
                  width="180"
                />
              </div>
            </div>
          </div>

          <ul class="sidebar-nav">
            <li class="sidebar-header">Paginas</li>

            <li class="sidebar-item active">
              <a class="sidebar-link" asp-controller="Admin" asp-action="Index">
                <i class="align-middle" data-feather="sliders"></i>
                <span class="align-middle">Usuarios</span>
              </a>
            </li>

            <li class="sidebar-item">
              <a class="sidebar-link" asp-controller="Admin" asp-action="roles">
                <i class="align-middle" data-feather="user"></i>
                <span class="align-middle">Roles</span>
              </a>
            </li>

            <li class="sidebar-item">
              <a class="sidebar-link" asp-controller="Admin" asp-action="permisos">
                <i class="align-middle" data-feather="user-check"></i>
                <span class="align-middle">Permisos</span>
              </a>
            </li>
            
          </ul>
        </div>
      </nav>

      <div class="main">
        <nav class="navbar navbar-expand navbar-bg">
          <a class="sidebar-toggle js-sidebar-toggle">
            <i class="hamburger align-self-center"></i>
          </a>

          <div class="navbar-collapse collapse">
            <ul class="navbar-nav navbar-align">
              <li class="nav-item dropdown">
                <a
                  class="nav-icon dropdown-toggle d-inline-block d-sm-none"
                  href="#"
                  data-bs-toggle="dropdown"
                >
                  <img
                    src="~/img/user-perfil.png"
                    class="avatar img-fluid rounded me-1"
                    alt="Charles Hall"
                  />
                </a>

                <a
                  class="nav-link dropdown-toggle d-none d-sm-inline-block"
                  href="#"
                  data-bs-toggle="dropdown"
                >
                  <img
                    src="~/img/user-perfil.png"
                    class="avatar img-fluid rounded me-1"
                    alt="Charles Hall"
                  />
                 @if (User.Identity.IsAuthenticated != null)
                  {
                    <span class="text-dark">@User.Identity.Name</span>
                  }
                </a>
                <div class="dropdown-menu dropdown-menu-end">
                  <div class="dropdown-divider"></div>

                  <a asp-action="CerrarSesion" asp-controller="Home" class="dropdown-item text-danger">
                    <i  class="align-middle me-1" data-feather="log-out"></i
                    >Cerrar sesión</a>
                </div>
              </li>
            </ul>
          </div>
        </nav>

        <main class="content">
          <div class="container-fluid p-0">
          
              <h1 class="tittleL">Lista de usuarios</h1> <br>
          <div class="card-header">
            <form class="form">
              <button>
                  <svg width="17" height="16" fill="none" xmlns="http://www.w3.org/2000/svg" role="img" aria-labelledby="search">
                      <path d="M7.667 12.667A5.333 5.333 0 107.667 2a5.333 5.333 0 000 10.667zM14.334 14l-2.9-2.9" stroke="currentColor" stroke-width="1.333" stroke-linecap="round" stroke-linejoin="round"></path>
                  </svg>
              </button>
              <input class="input" placeholder="Buscar" required="" type="text">
              <button class="reset" type="reset">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
                  </svg>
              </button>
          </form>
          </div>
          <br>
          <div id="CardTbla" class="card"> 
            <div class="card-body">
              <div class="table-container">
                <table class="custom-table">
                  <thead>
                    <tr>
                      <th>Usuario</th>
                      <th>Rol</th>
                      <th>Estado</th>
                      <th>Fecha de Creación</th>
                      <th>Acciones</th>
                    </tr>
                  </thead>
                  <tbody id="tableBody">
                    <!-- Contenido de la tabla -->
                  </tbody>
                </table>
                <div class="pagination">
                  <button id="prevPageBtn">&lt;</button>
                  <span id="pageNumbers"></span>
                  <button id="nextPageBtn">&gt;</button>
                </div>
                <button id="newUserBtn" class="new-user-btn">
                  <ion-icon name="person-add-outline"></ion-icon> Nuevo Usuario
                </button>
                <!-- Modal -->
                <div class="modal" id="newUserModal">
                  <div class="modal-content">
                    <span class="close-btn">&times;</span>
                    <h2>Crear Usuario</h2> 
                    <br>
                    <form id="createUserForm">
                      <div class="form-group">
                        <label for="nombre">Nombre:</label>
                        <input type="text" id="nombre" name="nombre" required>
                      </div>
                      <div class="form-group">
                        <label for="apellidoPaterno">Apellido Paterno:</label>
                        <input type="text" id="apellidoPaterno" name="apellidoPaterno" required>
                      </div>
                      <div class="form-group">
                        <label for="apellidoMaterno">Apellido Materno:</label>
                        <input type="text" id="apellidoMaterno" name="apellidoMaterno">
                      </div>
                      <div class="form-group">
                        <label for="correo">Correo:</label>
                        <input type="email" id="correo" name="correo" required>
                      </div>
                      <div class="form-group">
                        <label for="contrasena">Contraseña:</label>
                        <input type="password" id="contrasena" name="contrasena" required>
                      </div>
                      <div class="form-group">
                        <label for="rol">Rol:</label>
                        <select id="rol" name="rol">
                          <option value="administrador">Administrador</option>
                          <option value="coach">Coach</option>
                          <option value="arbitro">Árbitro</option>
                          <option value="organizador">Organizador</option>
                          <option value="contador">Contador</option>
                        </select>
                      </div> 
                      <div class="form-actions">
                        <button type="button" class="btn cancel-btn" onclick="document.getElementById('newUserModal').style.display='none'">Cancelar</button>
                        <button type="submit" class="btn create-btn">Crear</button>
                      </div>
                    </form>
                  </div>
                </div>
                
              </div>
               <!-- USER APARTADO -->
               <div id="UserMNB" class="containerP" style="display: none;">
                <div class="cardUserL">
                  <div class="cardUserL-header">
                    <h1>Nombre de Usuario</h1>
                    <div>
                      <button><ion-icon name="create-outline"></ion-icon></button>
                      <button><ion-icon name="trash-outline"></ion-icon></button>
                    </div>
                  </div>
                  <div class="cardUserL-content">
                    <p>Datos</p>
                  </div>
                </div> 
              <br><br> 
                <div class="containerGr">
                  <div class="cardG-1 card">
                    <div class="card-header">
                      <h1>Perfil</h1>
                      <div>
                        <button><ion-icon name="create-outline"></ion-icon></button>
                        <button><ion-icon name="trash-outline"></ion-icon></button>
                      </div>
                    </div>
                    <div class="card-content">
                      <!-- Contenido adicional de la card -->
                    </div>
                  </div>
                  <div class="cardG-2 card">
                    <div class="card-header">
                      <h1>Informacion del usuario:</h1>
                      <div>
                        <button><ion-icon name="create-outline"></ion-icon></button>
                        <button><ion-icon name="trash-outline"></ion-icon></button>
                      </div>
                    </div>
                    <div class="card-content">
                      <!-- Contenido adicional de la card -->
                    </div>
                  </div>
                  <div class="cardG-3 card">
                    <div class="card-header">
                      <h1>Privilegios</h1>
                      <div>
                        <button><ion-icon name="create-outline"></ion-icon></button>
                        <button><ion-icon name="trash-outline"></ion-icon></button>
                      </div>
                    </div>
                    <div class="card-content">
                      <!-- Contenido adicional de la card -->
                    </div>
                  </div>
                </div>
              </div>

              <br><br> 
            </div>
          </div>
          <br><br>
            
            </div>
          </div>
        </main>
        
      </div>
    </div>

    <script src="~/js/app.js"></script>
    <script src="~/js/mostrarJ.js"></script>
    <script src="~/js/tablas.js"></script>

    <!-- ====== ionicons ======= -->
    <script
      type="module"
      src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"
    ></script>
    <script
      nomodule
      src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"
    ></script>
    
  </body>
</html>

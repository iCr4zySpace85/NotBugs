    <script src="~/js/app.js"></script>
    <script src="~/js/mostrarJ.js"></script>
    <script src="~/js/tablas.js"></script>
    
    <script>
        // Función para abrir la modal y cargar el valor actual
        function openModal(fieldId) {
            var field = document.getElementById(fieldId);
            var editValue = document.getElementById('edit-value');
            editValue.value = field.value;
            document.getElementById('editModal').style.display = "block";
        }

        // Función para cerrar la modal
        function closeModal() {
            document.getElementById('editModal').style.display = "none";
        }

        // Función para guardar los cambios
        function saveChanges() {
            var fieldId = document.getElementById('editModal').getAttribute('data-field');
            var field = document.getElementById(fieldId);
            var editValue = document.getElementById('edit-value');
            field.value = editValue.value;
            closeModal();
        }

        // Asignar eventos a los iconos de editar
        document.getElementById('open-edit-email').addEventListener('click', function() {
            openModal('email-field');
            document.getElementById('editModal').setAttribute('data-field', 'email-field');
        });

        document.getElementById('open-edit-password').addEventListener('click', function() {
            openModal('password-field');
            document.getElementById('editModal').setAttribute('data-field', 'password-field');
        });

        document.getElementById('open-edit-role').addEventListener('click', function() {
            openModal('role-field');
            document.getElementById('editModal').setAttribute('data-field', 'role-field');
        });
    </script>


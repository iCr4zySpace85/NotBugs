        <main class="content">
          <div class="container-fluid p-0">
            <!-- BREADCRUMB -->
            <nav class="fw-bold">
              <ol class="breadcrumb">
                <li class="breadcrumb-item">
                  <a href="../index.html">Torneos</a>
                </li>
                <li class="breadcrumb-item active">Crear torneo</li>
              </ol>
            </nav>
            <!-- ---------- -->
            <div class="row">
              <div class="col-12">
                <div class="card">
                  <div class="card-header text-center">
                    <h3 class="fw-bold">Información del torneo</h3>
                  </div>
                  <div class="card-body align-self-center">
                    <form action="" class="p-">
                      <div class="row">
                        <div class="col-md-6">
                          <div class="mb-3">
                            <label class="form-label">Imagen del torneo:</label>
                            <input
                              class="form-control form-control"
                              id="formFileSm"
                              type="file"
                              required
                            />
                          </div>
                          <div class="mb-3">
                            <label class="form-label">Nombre del torneo:</label>
                            <input type="text" class="form-control" required />
                          </div>
                        </div>
                        <div class="col-md-6">
                          <div class="mb-3">
                            <label class="form-label">Deporte:</label>
                            <select
                              class="form-select"
                              aria-label="Default select example"
                            >
                              <option selected>Selecciona un deporte</option>
                              <option value="1">Futbol</option>
                              <option value="2">Basketball</option>
                              <option value="3">Volleyball</option>
                            </select>
                          </div>
                          <div class="mb-3">
                            <label class="form-label">Categoria:</label>
                            <select
                              class="form-select"
                              aria-label="Default select example"
                            >
                              <option selected>Selecciona categoria</option>
                              <option value="1">Femenino</option>
                              <option value="2">Infantil</option>
                              <option value="3">Profesional</option>
                            </select>
                          </div>
                        </div>
                      </div>
                      <div class="row">
                        <p>Rango de edad:</p>
                        <div class="col-md-2">
                          <div class="mb-3">
                            <label class="form-label">De:</label>
                            <input
                              type="number"
                              class="form-control"
                              required
                            />
                          </div>
                        </div>
                        <div class="col-md-2">
                          <div class="mb-3">
                            <label class="form-label">Hasta:</label>
                            <input
                              type="number"
                              class="form-control"
                              required
                            />
                          </div>
                        </div>
                        <div class="col-md-4">
                          <div class="mb-3">
                            <label class="form-label">Fecha de inicio:</label>
                            <input type="date" class="form-control" required />
                          </div>
                        </div>
                        <div class="col-md-4">
                          <div class="mb-3">
                            <label class="form-label">Fecha de fin:</label>
                            <input type="date" class="form-control" required />
                          </div>
                        </div>
                      </div>
                      <div class="mt-3 text-md-end">
                        <a class="btn btn-danger" asp-controller="Organizador" asp-action="index">
                          Cancelar
                        </a>
                        <a
                          type="submit"
                          class="btn btn-primary"
                          asp-controller="Organizador" asp-action="reglas"
                        >
                          Siguiente<i
                            class="ms-2 fa-solid fa-angle-right"
                            style="color: #ffffff"
                          ></i>
                        </a>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>

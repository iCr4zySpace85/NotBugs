@{
    ViewData["Title"] = "Ingresar Código de Verificación";
    Layout = null; // Si no quieres usar un diseño para esta vista
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <!-- Agrega aquí los enlaces a tus archivos CSS si es necesario -->
    <!-- Agrega la referencia al archivo CSS de Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <!-- Agrega la referencia a tu propio archivo CSS si es necesario -->
    <link rel="stylesheet" href="~/css/styleGeneral.css" />
    <link rel="stylesheet" href="~/css/log_estyle.css" />
</head>
<body>

    <style>

        .icon {
            width: 200px;
            height: 50px;
            background-image: url('../img/logo.jpg');
            /* Ruta de la imagen del ícono */
            background-size: contain;
            background-repeat: no-repeat;
            margin-bottom: 1.2em;
        }

        .lienzo {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

    </style>

    <di@*v class="container">
        <h2>Ingresar Código de Verificación</h2>
        <form method="post">
            <div class="form-group">
                <label for="codigoVerificacion">Código de Verificación:</label>
                <input type="number" maxlength="6" class="form-control" id="codigoVerificacion" name="codigoVerificacion" required>
            </div>
            <button type="submit" class="btn btn-primary">Enviar</button>
        </form>
    </div>*@

    <div class="lienzo">
        <div class="container mt-5">
            <div class="row justify-content-center ">
                <div class="col-md-6 border border-2 p-4 rounded-3 m-2">


                    @if (!string.IsNullOrEmpty(ViewBag.Error))
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.Error
                        </div>
                    }

                    <form method="post">
                        <div class="mb-3">
                            <div class="flex-column">
                                <div class="icon"></div>
                                <h2 style="text-align: center;" class="mb-4">Código de Verificación</h2>

                                <p>Por favor, coloca el código de verificación que se te envio a tu numero telefonico para poder cambiar tu contraseña.</p>

                                <label>Ingresar código:</label>
                            </div>
                            <div class="inputForm">
                                <input type="number" min="0" max="999999" class="input" id="codigoVerificacion" name="codigoVerificacion" required>
                            </div>
                        </div>

                        <div class="text-end">
                            <button type="submit" class="button-submit">Verificar código</button>
                            <button type="button" onclick="window.location.href='@Url.Action("Login", "Home")';" class="button-exit">Iniciar Sesión</button>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>

    <!-- Agrega aquí los enlaces a tus archivos JavaScript si es necesario -->
    <!-- Agrega la referencia al archivo JavaScript de Bootstrap (requiere jQuery) -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
</body>
</html>

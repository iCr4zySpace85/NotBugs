@model CrafterCodes.Models.ViewModels.PageInfoViewModel
<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Contenedores Flexibles</title>
  <link rel="stylesheet" href="~/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/head.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    integrity="sha512-..." />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet" />
</head>

<body>
  <header class="inicio-img">
    <div class="navh">
      <div class="container__menu">
        <div class="logo">
          <a href="index.html" class="enlace">
            <img src="~/img/logo-sportsync.png" alt="logo" />
          </a>
        </div>

        <div class="menu">
          <i class="fa-solid fa-bars" id="btn_menu"></i>
          <div id="back_menu"></div>
          <nav id="nav">
            <button class="responsive-button" id="close-button">
              <i class="fa-solid fa-xmark" style="color: #000000"></i>
            </button>
            <div class="logorespos">
              <img src="~/img/logo-sportsync.png" alt="logo" />
            </div>

            <ul class="fonnav">
              <li>
                <a class="text-link" href="index.html" id="selected">Inicio</a>
              </li>
              <li>
                <a class="text-link" href="futbol.html">FUTBOL</a>
              </li>
              <li>
                <a class="text-link" href="basquet.html">BASQUEBALL</a>
              </li>
              <li>
                <a class="text-link" href="volleyball.html">VOLLEYBALL</a>
              </li>
              <li>
                <a class="sign-in" href="">SIGN IN</a>
              </li>
            </ul>
            <ul></ul>
          </nav>
        </div>
      </div>
    </div>
  </header>
  <!-- Segundo navbar -->
  <nav class="navbar navbar-expand-lg navbar-custom p-0 border-bottom border-dark">
    <div class="container">
      <div class="navbar-brand" href="#">
        <img src="https://via.placeholder.com/60" alt="Torneo" />
        <strong>
          Nombre de torneo
          </strong>
      </div>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item active">
            <a class="nav-link" href="torneo.html">Equipos</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="partidos.html">Partidos</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="resultados.html">Resultados</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <main class="p-5">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-8 p-3">
          <div class="shadow-lg bg-body rounded p-4">
            <div class="input-group p-4">
              <i class="input-group-text rounded-0 fa-solid fa-magnifying-glass"></i>
            <input type="text" class="form-control rounded-0" placeholder="Buscar equipo" />
          </div>
          <!-- Cards fila -->
          <div class="row">
            @foreach (var equipo in Model.Equipo)
            {
              <div class="col-md-6">
                <div class="card">
                  <div class="card-body card-contenido">
                    <img src="@Url.Content(equipo.IMG_equipo)" alt="Imagen del equipo" />
                    <div>
                      <p class="card-text fs-6">
                        <strong>Nombre del equipo: @equipo.Nombre</strong><br />
                        <span>Deporte: @equipo.Categoria</span>
                      </p>
                      <a href="#" class="btn btn-outline-primary">Más información</a>
                    </div>
                  </div>
                </div>
              </div>

            }
          </div>
          <!-- Fin Cards -->

            
            <!-- FIn Cards fila -->
          </div>
        </div>
        <!-- Columa de noticias -->
        <div class="col-md-4 p-3">
          
          <!-- cards -->

        @foreach (var noticia in Model.Noticias)
        {
          <div class="container-fluid p-3 border border-dark mb-3">
          <div class="card rounded-0">
            <div class="ratio ratio-16x9">
              <iframe src="https://www.youtube.com/embed/DgdD5rUozew?si=O1REZp9SKbyK84uh" title="YouTube video player"
                frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
            </div>
            <div class="card-body">
                <p class="card-text">
                  @noticia.Contenido
                </p>
              </div>
            </div>
          </div>
        }
        
          <!--fin cards -->
        </div>
        <!-- fin Columa de noticias -->
      </div>
    </div>
  </main>
  <!-- Footer -->
  <footer class="text-center text-lg-start bg-body-tertiary text-muted">
    <section class="d-flex justify-content-center justify-content-lg-center p-4 border-bottom">
      <div>
        <a href="" class="me-4 text-reset">
          <i class="fab fa-facebook-f"></i>
        </a>
        <a href="" class="me-4 text-reset">
          <i class="fab fa-twitter"></i>
        </a>
        <a href="" class="me-4 text-reset">
          <i class="fab fa-google"></i>
        </a>
        <a href="" class="me-4 text-reset">
          <i class="fab fa-instagram"></i>
        </a>
        <a href="" class="me-4 text-reset">
          <i class="fab fa-linkedin"></i>
        </a>
        <a href="" class="me-4 text-reset">
          <i class="fab fa-github"></i>
        </a>
      </div>
      <!-- Right -->
    </section>

    <div class="text-center p-4" style="background-color: rgba(0, 0, 0, 0.05)">
      © 2024:
      <a class="text-reset fw-bold" href="">SPORTSYNC</a>
    </div>
  </footer>
  <!-- Footer -->
  <script src="~/js/bootstrap.bundle.min.js"></script>
  <script src="~/js/script.js"></script>


  <script>
    document.getElementById('equiposRadio').addEventListener('change', function () {
      document.getElementById('equiposContent').classList.add('contenido-activo');
      document.getElementById('partidosContent').classList.remove('contenido-activo');
    });

    document.getElementById('partidosRadio').addEventListener('change', function () {
      document.getElementById('partidosContent').classList.add('contenido-activo');
      document.getElementById('equiposContent').classList.remove('contenido-activo');
    });
  </script>
</body>

</html>

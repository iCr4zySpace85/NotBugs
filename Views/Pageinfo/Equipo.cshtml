@model IEnumerable<CrafterCodes.Models.Equipo> // Asegúrate de usar el namespace correcto


<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Equipo</title>
  <link rel="stylesheet" href="~/css/equipo.css" />
  <link rel="stylesheet" href="~/css/normalize.css" />
  <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      integrity="sha512-..."
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap"
      rel="stylesheet"
    />
</head>

<body>
  <nav class="navbar">
    <div class="logo">
      <a href="#">
        <img src="~/img/logo.PNG" alt="Logo" />
      </a>
    </div>

    <button class="menu-btn">&#9776;</button>

    <div class="menu" id="menu">
      <a href="#">Inicio</a>
      <a href="#">Futbol</a>
      <a href="#">Basquetball</a>
      <a href="#">Volleyball</a>
    </div>
  </nav>

  <div class="contenedor-principal">
    <h1 class="titulo">Nombre del Torneo</h1>
    <div class="radio-inputs">
      <label class="radio">
        <input type="radio" name="radio" checked="" id="equiposRadio">
        <span class="name">Inicio</span>
      </label>
      <label class="radio">
        <input type="radio" name="radio" id="partidosRadio">
        <span class="name">Calendario</span>
      </label>
      <label class="radio">
        <input type="radio" name="radio" id="partidosRes">
        <span class="name">Resultados</span>
      </label>
      <label class="radio">
        <input type="radio" name="radio" id="partidosJu">
        <span class="name">Jugadores</span>
      </label>
    </div>
  </div>
  <hr>
  <div id="equiposContent" class="contenido contenido-activo">

    <!--  Conmtenedor 1 -->
    <div class="contenedor-80">

      <div class="contenedor-cards">
        <!-- Card 1 -->
        <div class="card">
          <img style="width: 100%;  " src="~/img/img3.jpeg" alt="Imagen">
          <div class="card-info">
            <h3 class="card-title">Título Card 1</h3>
            <p class="card-text">Descripción breve del contenido del card.</p>
          </div>
        </div>

      </div>
    </div>



    <!-- CONTENEDOR 2 -->





    <div class="contenedor-20">
      @foreach (var equipo in Model)
      {
        <div class="noticia">
          <div class="imagen-noticia">

            <img src="@Url.Content(equipo.IMG_equipo)" alt="Imagen del equipo" />
          </div>
          <div class="contenido-noticia">
            <h3>@equipo.Nombre</h3>
            <p>@equipo.Categoria</p>
          </div>
        </div>
      }
    </div>
  </div>

  <div id="partidosContent" class="contenido">
    <p>Contenido de Partidos: Esta sección puede contener información sobre los partidos próximos, resultados
      anteriores, estadísticas, etc.</p>
  </div>

  <div id="resultadosconten" class="contenido">
    <h1>Resultados</h1>
  </div>

  <div id="jugadoresconte" class="contenido">
    <h1> Jugadores</h1>
  </div>
  <script>


    document.addEventListener('DOMContentLoaded', function () {
      var radios = document.querySelectorAll('.radio-inputs input[type="radio"]');

      radios.forEach(function (radio) {
        radio.addEventListener('change', function () {
          var allContents = document.querySelectorAll('.contenido');
          allContents.forEach(function (content) {
            content.classList.remove('contenido-activo');
          });


          var contentId = '';
          switch (radio.id) {
            case 'equiposRadio':
              contentId = 'equiposContent';
              break;
            case 'partidosRadio':
              contentId = 'partidosContent';
              break;
            case 'partidosRes':
              contentId = 'resultadosconten';
              break;
            case 'partidosJu':
              contentId = 'jugadoresconte';
              break;
          }

          if (contentId) {
            document.getElementById(contentId).classList.add('contenido-activo');
          }
        });
      });
    });



  </script>
</body>

</html>
